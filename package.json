{
  "name": "tiny-tools",
  "version": "1.0.0",
  "description": "tiny tools",
  "private": true,
  "scripts": {
    "boot": "pnpm install && pnpm run clear:lock",
    "clear": "pnpm --filter \"./packages-**\" clear && npx rimraf dist && npx rimraf node_modules",
    "clear:lock": "npx rimraf pnpm-lock.yaml",
    "prepare": "husky install",
    "lint:style": "stylelint \"packages-**/**/*.{less, css, vue}\"",
    "postinstall": "npx only-allow pnpm"
  },
  "lint-staged": {
    "*.{js_ts_tsx_css_vue,disabled_for_buggy}": "stylelint",
    "*.md": "markdownlint-cli2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Not-have/tiny-tools.git"
  },
  "author": "Li Yong",
  "license": "ISC",
  "workspaces": [
    "packages-vue"
  ],
  "devDependencies": {
    "@alicloud/stylelint-config": "^1.2.4",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "commitlint": "^17.7.1",
    "depcheck": "^1.4.5",
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "markdownlint-cli2": "^0.9.2",
    "only-allow": "^1.1.1",
    "rimraf": "^5.0.1",
    "stylelint": "^15.10.3",
    "typescript": ">=4.7"
  }
}
