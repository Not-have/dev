{
  "name": "tiny-tools",
  "version": "1.0.0",
  "description": "tiny tools",
  "private": true,
  "scripts": {
    "boot": "pnpm install && pnpm run clear:lock",
    "postinstall": "npx only-allow pnpm",
    "clear": "pnpm --filter \"./packages-**\" clear && npx rimraf dist && npx rimraf node_modules",
    "clear:lock": "npx rimraf pnpm-lock.yaml",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages-vue"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "commitlint": "^17.7.1",
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
    "only-allow": "^1.1.1",
    "rimraf": "^5.0.1",
    "typescript": ">=4.7"
  }
}
