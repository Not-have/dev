{
  "name": "tiny-tools",
  "version": "1.0.0",
  "description": "tiny tools",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "boot": "pnpm install && pnpm run clear:lock",
    "clear": "npx rimraf dist && pnpm --filter \"./packages-**\" clear && npx rimraf node_modules",
    "clear:lock": "npx rimraf pnpm-lock.yaml && npx rimraf package-lock.json",
    "lint:style": "stylelint ./packages-**/**/*.{tsx,css,vue}"
  },
  "lint-staged": {
    "*.{js,ts,vue,tsx,jsx}": "eslint",
    "*.{js_ts_tsx_css_vue,disabled_for_buggy}": "stylelint",
    "*.md": "markdownlint-cli2"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Not-have/tiny-tools"
  },
  "author": {
    "email": "2236472089@qq.com",
    "name": "Li Yong"
  },
  "license": "ISC",
  "workspaces": [
    "packages-vue"
  ],
  "devDependencies": {
    "@alicloud/stylelint-config": "^1.2.4",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "commitlint": "^17.7.1",
    "depcheck": "^1.4.5",
    "eslint": "^8.47.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "markdownlint-cli2": "^0.9.2",
    "only-allow": "^1.1.1",
    "rimraf": "^5.0.1",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^6.0.3",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": ">=4.7"
  },
  "__npminstall_done": false
}
