{
  "version": "independent",
  "npmClient": "pnpm",
  "packages": [
    "packages-utils"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "conventionalCommits": false,
      "message": "[skip ci] chore: release",
      "ignoreChanges": [
        "*.md",
        ".storybook",
        "stories",
        ".npmignore",
        "**/node_modules/**"
      ],
      "registry": "https://registry.npmjs.org/",
      "build": {
        "ignore": ["packages-vue-components", "packages-style", "packages-eslint-conf", "packages-stylelint-conf"]
      }
    }
  }
}
